<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_shimmer_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/viv_back"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_margin="@dimen/margin_medium"
        android:background="@color/shimmer_grey"
        app:layout_constraintEnd_toStartOf="@id/vtv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vtv_title"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_margin="@dimen/margin_medium"
        android:background="@color/shimmer_grey"
        app:layout_constraintStart_toEndOf="@id/viv_back"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/vcv_youtube"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="@dimen/margin_medium"
        app:cardBackgroundColor="@color/shimmer_grey"
        app:cardCornerRadius="@dimen/margin_small"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/vtv_title" />

    <View
        android:id="@+id/vtv_title_text"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_margin="@dimen/margin_medium"
        android:background="@color/shimmer_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vcv_youtube" />

    <View
        android:id="@+id/vtv_genre"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_margin="@dimen/margin_medium"
        android:background="@color/shimmer_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vtv_title_text" />

    <View
        android:id="@+id/vtv_rating"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_margin="@dimen/margin_medium"
        android:background="@color/shimmer_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vtv_genre" />

    <View
        android:id="@+id/vtv_review"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="@dimen/margin_medium"
        android:background="@color/shimmer_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vtv_rating" />

</androidx.constraintlayout.widget.ConstraintLayout>